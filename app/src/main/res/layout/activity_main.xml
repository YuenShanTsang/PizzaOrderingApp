<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <!--Upper Part-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <!--Title-->
        <TextView
            android:id="@+id/pizzaOrder_text_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:text="@string/pizzaOrder_text"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!--Picture-->
        <ImageView
            android:id="@+id/pizza_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/pizza_image"
            android:src="@drawable/pizza_image" />

    </LinearLayout>

    <!--Middle Part-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <!--Select Title-->
        <TextView
            android:id="@+id/selectTopping_text_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:gravity="fill"
            android:text="@string/selectTopping_text"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!--Topping Choices-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/topping_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp" />

    </LinearLayout>

    <!--Lower Part-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="vertical">

        <!--Request Text-->
        <TextView
            android:id="@+id/request_text_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/request_text"
            android:textSize="20sp" />

        <!--User Input-->
        <EditText
            android:id="@+id/input_edit_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:ems="15"
            android:hint="@string/input_editText"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="10dp"
            tools:ignore="LabelFor,VisualLintTextFieldSize" />

        <!--Submit Button-->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:drawableEnd="@drawable/submit_icon"
            android:gravity="center"
            android:text="@string/submit_button"
            android:textColor="@color/material_dynamic_neutral40"
            android:textSize="20sp"
            tools:ignore="VisualLintButtonSize" />

    </LinearLayout>

</LinearLayout>