<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7">

    <!--Upper Part-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <!--Title-->
        <TextView
            android:id="@+id/pizzaOrder_text_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:gravity="start"
            android:text="@string/pizzaOrder_text"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!--Picture-->
        <ImageView
            android:id="@+id/pizza_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pizza_image"
            android:contentDescription="@string/pizza_image" />

    </LinearLayout>

    <!--Middle Part-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

            <!--Select-->
            <TextView
                android:id="@+id/selectTopping_text_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/selectTopping_text"
                android:textSize="25sp"
                android:textStyle="bold" />

            <!--Topping Choices-->
            <Spinner
                android:id="@+id/topping_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:minHeight="48dp"
                android:contentDescription="@string/topping_spinner"/>

    </LinearLayout>

    <!--Lower Part-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <!--Request Text-->
        <TextView
            android:id="@+id/request_text_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/request_text"
            android:textSize="25sp" />

        <!--User Input-->
        <EditText
            android:id="@+id/input_edit_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:minHeight="48dp"
            android:ems="15"
            android:hint="@string/input_editText"
            android:inputType="text"
            android:importantForAutofill="no"
            tools:ignore="LabelFor,VisualLintTextFieldSize" />

        <!--Submit Button-->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="@string/submit_button"
            android:textSize="20sp"
            android:textColor="@color/material_dynamic_neutral40"
            android:drawableEnd="@drawable/submit_icon"
            tools:ignore="VisualLintButtonSize" />

    </LinearLayout>

</LinearLayout>